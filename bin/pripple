#!/usr/bin/env php
<?php
include __DIR__ . '/../vendor/autoload.php';
function strToBytes(string $str): int
{
    $last = strtolower($str[strlen($str) - 1]);
    $num  = (int)substr($str, 0, -1);

    if ($last === 'g') {
        $num *= 1024;
    }
    if ($last === 'm') {
        $num *= 1024;
    }
    if ($last === 'k') {
        $num *= 1024;
    }

    return $num;
}

use Cclilshy\PRipple\Console;
use Cclilshy\PRipple\Configure;

Configure::init();
Console::init()->run();
